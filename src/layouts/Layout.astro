---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "./src/styles/global.css";
import "@fontsource-variable/inter";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="description"
			content="Constructora dominicana comprometida con la excelencia en la administración, construcción, diseño y supervisión de obras civiles."
		/>
		<meta name="og:image" content="/og-image.webp" />
		<meta name="og:title" content="Tenax Construction" />
		<meta
			name="og:description"
			content="Constructora dominicana comprometida con la excelencia en la administración, construcción, diseño y supervisión de obras civiles."
		/>
		<meta name="author" content="Jhossua Roa Rodriguez" />
		<meta name="theme-color" content="#374057" />
		<title>Tenax Construction</title>
		<link rel="icon" type="image/webp+xml" href="/favicon.webp" />
	</head>
	<body class="mx-auto w-full h-dvh">
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Inter Variable", sans-serif;
	}
	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
