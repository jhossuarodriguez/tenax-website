---
import { Image } from "astro:assets";
import { NEWS } from "./consts/News";
---

<section class="w-full min-h-screen mt-20">
    <div class="flex flex-col items-center justify-center">
        <h1 class="relative text-4xl font-semibold text-black/75">
            Ultimas Novedades
            <span
                class="absolute top-12 left-0 bottom-0 w-full h-1 bg-[#F46738] scale-x-100 origin-left"
            ></span>
        </h1>
    </div>

    <div
        class="grid grid-cols-1 sm:grid-cols-2 gap-4 p-6 bg-gray-100 mt-20 max-w-5xl mx-auto"
    >
        {
            NEWS.map((item) => (
                <div class="bg-white drop-shadow-2xl overflow-hidden w-full max-w-[400px] h-[450px] mx-auto flex flex-col">
                    <Image
                        src={item.imageUrl}
                        alt={item.title}
                        width={400}
                        height={225}
                        class="w-full h-auto object-cover flex-shrink-0"
                        loading="lazy"
                    />
                    <div class="p-3 flex-1 flex flex-col">
                        <h2 class="text-base text-black/75 font-semibold mb-2 flex-shrink-0">
                            {item.title}
                        </h2>
                        <p class="text-xs text-gray-600 mb-3 flex-1 line-clamp-3 leading-5">
                            {item.description}
                        </p>
                        <div class="text-xs text-gray-500 flex items-center space-x-2 flex-shrink-0">
                            <span>
                                {new Date(item.date).toLocaleDateString()}
                            </span>
                            <span>•</span>
                            <span class="font-bold">Por {item.author}</span>
                            <span>•</span>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</section>
