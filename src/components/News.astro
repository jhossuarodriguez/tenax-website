---
import { Image } from "astro:assets";
import { NEWS } from "./consts/News";
---

<section class="w-full min-h-screen mt-20">
    <div class="flex flex-col items-center justify-center">
        <header class="relative text-4xl font-semibold text-black/75">
            Ultimas Novedades
            <span
                class="absolute top-12 left-0 bottom-0 w-full h-1 bg-primary scale-x-100 origin-left"
            ></span>
        </header>
    </div>

    <div
        class="grid grid-cols-1 sm:grid-cols-2 gap-4 p-6 bg-gray-100 mt-20 max-w-5xl mx-auto"
    >
        {
            NEWS.map((news) => (
                <a href={`/news/${news.id}`} class="group">
                    <figure class="bg-white drop-shadow-2xl overflow-hidden w-full max-w-[400px] h-[450px] mx-auto flex flex-col transition-all duration-300 hover:shadow-2xl">
                        <Image
                            transition:name={`image-${news.id}`}
                            data-id={news.id}
                            src={`/news/${news.id}.webp`}
                            alt={news.title}
                            width={400}
                            height={225}
                            class="w-full h-auto object-cover flex-shrink-0"
                            loading="lazy"
                        />
                        <figcaption>
                            <div class="p-3 flex-1 flex flex-col">
                                <h2 class="text-base text-black/75 font-semibold mb-2 flex-shrink-0">
                                    {news.title}
                                </h2>
                                <p class="text-xs md:text-base leading-relaxed text-black/75 mb-3 flex-1 line-clamp-3 ">
                                    {news.description}
                                </p>
                                <div class="text-xs text-black/50 flex items-center space-x-2 flex-shrink-0">
                                    <span>
                                        {new Date(
                                            news.date,
                                        ).toLocaleDateString()}
                                    </span>
                                    <span>•</span>
                                    <span class="font-bold">
                                        Por {news.author}
                                    </span>
                                    <span>•</span>
                                </div>
                            </div>
                        </figcaption>
                    </figure>
                </a>
            ))
        }
    </div>
</section>
