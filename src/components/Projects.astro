---
import { Picture } from "astro:assets";
import { PROJECTS_IMAGES } from "./consts/Images";
import SliderControl from "../assets/icons/sliderControl.svg";
---

<section class="w-full h-auto py-20">
    <div class="flex flex-col items-center justify-center">
        <header class="relative text-4xl font-semibold text-black/75">
            Nuestros Proyectos
            <span
                class="absolute top-12 left-0 bottom-0 w-full h-1 bg-[#F46738] scale-x-100 origin-left"
            ></span>
        </header>
        <div class="flex justify-between w-full max-w-6xl mt-20">
            <aside class="justify-start hidden md:block">
                <header class="text-black text-lg">Relevantes</header>
                <ul class="mt-3.5 space-y-3.5 translate-x-10">
                    <li>
                        <a href="" class="text-black/25 hover:text-black"
                            >Paneles Solares</a
                        >
                    </li>
                    <li>
                        <a href="" class="text-black/25 hover:text-black"
                            >Naves Industriales</a
                        >
                    </li>
                    <li>
                        <a href="" class="text-black/25 hover:text-black"
                            >Pavimentos Y <br /> Cimentaciones</a
                        >
                    </li>
                </ul>
            </aside>

            <div class="w-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {
                        PROJECTS_IMAGES.map((project) => (
                            <a href={`/projects/${project.id}`}>
                                <figure class="bg-white drop-shadow-2xl overflow-hidden mx-auto flex flex-col rounded w-80 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:-translate-y-2 cursor-pointer group">
                                    <Picture
                                        transition:name={`image-${project.id}`}
                                        src={`/projects/${project.id}.webp`}
                                        alt={project.alt}
                                        width={350}
                                        height={260}
                                        class="object-cover flex-shrink-0 "
                                        loading="lazy"
                                    />
                                    <figcaption class="mt-2 text-center h-auto flex flex-col justify-between px-4">
                                        <h2 class="font-semibold text-xl text-black/75 transition-colors duration-300 group-hover:text-[#F46738]">
                                            {project.title}
                                        </h2>
                                        <p class="text-sm text-black/75 mt-5 transition-colors duration-300 group-hover:text-black/90">
                                            {project.description}
                                        </p>

                                        <p class="text-sm font-semibold text-black/75 mt-5 mb-5 transition-colors duration-300 group-hover:text-[#F46738]">
                                            {project.location}
                                        </p>
                                    </figcaption>
                                </figure>
                            </a>
                        ))
                    }
                </div>

                <div class="mt-5 justify-between items-center hidden md:flex">
                    <button
                        class="bg-[#F46738] text-white px-6 py-3 rounded hover:hover:bg-[#e35d2c] transition duration-300 cursor-pointer"
                        >Next</button
                    >

                    <SliderControl class="size-40 h-auto" />

                    <button
                        class="bg-[#F46738] text-white px-6 py-3 rounded hover:hover:bg-[#e35d2c] transition duration-300 cursor-pointer"
                        >Previous</button
                    >
                </div>
            </div>
        </div>

        <div class="flex flex-col justify-center items-center gap-y-5">
            <p class="mt-10 text-lg text-black/75">
                Explora nuestros proyectos destacados
            </p>
            <a
                href="#contacto"
                class="bg-[#F46738] text-white px-6 py-3 rounded hover:hover:bg-[#e35d2c] transition duration-300"
                title="Solicitar cotización para tu proyecto de construcción"
                aria-label="Solicitar cotización para tu proyecto de construcción"
            >
                Solicitar Cotización
            </a>
        </div>
    </div>
</section>
