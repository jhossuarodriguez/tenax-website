---
import Layout from '../../layouts/Layout.astro'
import WhatsApp from '../../assets/icons/social/whatsapp.svg'
import Email from '../../assets/icons/social/email.svg'
import Calendar from '../../assets/icons/calendar.svg'
export const prerender = false
const canonical = 'https://tenaxconstruction.com.do/cotizacion/[id]'

const errors = { message: '' }
let success = false

if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData()
    const nombre = data.get('nombre')?.toString()
    const email = data.get('email')?.toString()
    const telefono = data.get('telefono')?.toString()
    const presupuesto = data.get('presupuesto')?.toString()
    const tipoProyecto = data.get('tipoProyecto')?.toString()
    const descripcion = data.get('descripcion')?.toString()

    if (!nombre || !email || !telefono || !presupuesto || !tipoProyecto || !descripcion) {
      errors.message = 'Todos los campos marcados con * son obligatorios.'
    } else {
      // Redirigir al API endpoint
      const response = await fetch(new URL('/api/cotizacion', Astro.url), {
        method: 'POST',
        body: data,
      })

      if (response.ok) {
        success = true
      } else {
        errors.message = 'Error al enviar la cotización. Intenta nuevamente.'
      }
    }
  } catch (error) {
    console.error('Error:', error)
    errors.message = 'Error interno del servidor.'
  }
}
---

<Layout canonical={canonical}>
  <section
    class="w-full min-h-screen py-20 bg-[url('/about-bg.webp')] bg-cover bg-center bg-no-repeat relative"
  >
    <div class="absolute inset-0 bg-black/75 z-0"></div>
    <div class="max-w-4xl mx-auto px-4 mt-20 relative z-10">
      <header class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">Solicita tu cotización</h1>
        <p class="text-lg text-white/60">
          Completa el formulario y te contactaremos en las próximas 24 horas
        </p>
      </header>

      <div class="bg-white rounded-lg shadow-lg p-8">
        {
          success && (
            <div class="mb-6 p-4 rounded-md bg-green-50 border border-green-200 text-green-800">
              ¡Cotización enviada exitosamente! Te contactaremos en las próximas 24 horas. Revisa tu
              email para la confirmación.
            </div>
          )
        }
        {
          errors.message && (
            <div class="mb-6 p-4 rounded-md bg-red-50 border border-red-200 text-red-800">
              {errors.message}
            </div>
          )
        }

        <!-- Mensajes de estado del JavaScript -->
        <div id="message" class="hidden mb-6 p-4 rounded-md">
          <div id="messageContent"></div>
        </div>

        <form id="cotizacionForm" class="space-y-6" method="POST">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">
                Nombre Completo *
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-black/75"
                placeholder="Nombre completo"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-black/75"
                placeholder="Ingresa tu correo electrónico"
              />
            </div>

            <div>
              <label for="telefono" class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono *
              </label>
              <input
                type="tel"
                id="telefono"
                name="telefono"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-black/75"
                placeholder="+1 (809) 000-0000"
              />
            </div>

            <div>
              <label for="ubicacion" class="block text-sm font-medium text-gray-700 mb-2">
                Ubicación del Proyecto
              </label>
              <input
                type="text"
                id="ubicacion"
                name="ubicacion"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-black/75"
                placeholder="Ciudad, Sector"
              />
            </div>
          </div>

          <div>
            <label for="tipoProyecto" class="block text-sm font-medium text-gray-700 mb-2">
              Tipo de Proyecto *
            </label>
            <select
              id="tipoProyecto"
              name="tipoProyecto"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-black/75"
            >
              <option value="">Selecciona el tipo de proyecto</option>
              <option value="residencial">Casa Residencial</option>
              <option value="edificio">Edificio/Apartamentos</option>
              <option value="comercial">Proyecto Comercial</option>
              <option value="industrial">Nave Industrial</option>
              <option value="remodelacion">Remodelación</option>
              <option value="otro">Otro</option>
            </select>
          </div>

          <div>
            <label for="presupuesto" class="block text-sm font-medium text-gray-700 mb-2">
              Presupuesto Estimado
            </label>
            <select
              id="presupuesto"
              name="presupuesto"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent
                            text-black/75"
            >
              <option value="">Selecciona un rango</option>
              <option value="50k-100k">$50,000 - $100,000</option>
              <option value="100k-250k">$100,000 - $250,000</option>
              <option value="250k-500k">$250,000 - $500,000</option>
              <option value="500k-1m">$500,000 - $1,000,000</option>
              <option value="1m+">Más de $1,000,000</option>
            </select>
          </div>

          <div>
            <label for="descripcion" class="block text-sm font-medium text-gray-700 mb-2">
              Descripción del Proyecto *
            </label>
            <textarea
              id="descripcion"
              name="descripcion"
              rows="4"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-black/75"
              placeholder="Describe tu proyecto: tipo de construcción, tamaño aproximado, características especiales, etc."
            ></textarea>
          </div>

          <div>
            <label for="fechaInicio" class="block text-sm font-medium text-gray-700 mb-2">
              Fecha Deseada de Inicio
            </label>
            <input
              type="date"
              id="fechaInicio"
              name="fechaInicio"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-black/75"
            />
          </div>

          <!-- Términos y condiciones -->
          <div class="flex items-start">
            <input
              type="checkbox"
              id="terminos"
              name="terminos"
              required
              class="mt-1 h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded"
            />
            <label for="terminos" class="ml-2 text-sm text-gray-700">
              Acepto los <a href="#" class="text-primary hover:underline">términos y condiciones</a>
              y autorizo el procesamiento de mis datos personales para fines de cotización. *
            </label>
          </div>

          <!-- Botón de envío -->
          <div class="text-center">
            <button
              type="submit"
              id="submitBtn"
              class="bg-primary text-white px-8 py-3 rounded-md hover:bg-[#e35d2c] transition duration-300 font-medium text-lg disabled:opacity-50 disabled:cursor-not-allowed cursor-pointer"
            >
              <span id="submitText">Enviar Solicitud de Cotización</span>
              <span id="loadingText" class="hidden">Enviando...</span>
            </button>
          </div>
        </form>
      </div>

      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div class="flex flex-col justify-center items-center bg-white p-6 rounded-lg shadow">
          <h3 class="font-semibold text-lg text-black/75 mb-2">Llámanos</h3>

          <p class="text-black/60">+1 (809) 898-6028</p>
          <a
            class="mt-2"
            href="https://wa.me/18098986028"
            target="_blank"
            rel="noopener noreferrer"
            title="Contáctanos por WhatsApp"
            aria-label="Contáctanos por WhatsApp"
          >
            <WhatsApp class="size-10" />
          </a>
        </div>
        <div class="flex flex-col justify-center items-center bg-white p-6 rounded-lg shadow">
          <h3 class="font-semibold text-lg text-black/75 mb-2">Email</h3>
          <p class="text-black/60">proyectos@tenax.com.do</p>
          <a
            class="mt-2"
            href="mailto:proyectos@tenax.com.do"
            title="Envíanos un correo electrónico"
            aria-label="Envíanos un correo electrónico"
          >
            <Email class="size-12" />
          </a>
        </div>
        <div class="flex flex-col justify-center items-center bg-white p-6 rounded-lg shadow">
          <h3 class="font-semibold text-lg text-black/75 mb-2">Horario</h3>
          <p class="text-black/60">Lun - Vie: 8:00 AM - 5:00 PM</p>
          <Calendar class="size-10 mt-2" />
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('cotizacionForm') as HTMLFormElement

    const messageDiv = document.getElementById('message') as HTMLDivElement
    const messageContent = document.getElementById('messageContent') as HTMLDivElement

    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement

    const submitText = document.getElementById('submitText') as HTMLSpanElement

    const loadingText = document.getElementById('loadingText') as HTMLSpanElement

    // Ocultar mensajes del servidor si JavaScript está disponible
    const serverMessages = document.querySelectorAll('.mb-6.p-4.rounded-md:not(#message)')
    serverMessages.forEach((msg) => {
      if (msg !== messageDiv) {
        ;(msg as HTMLElement).style.display = 'none'
      }
    })

    function showMessage(message: string, type: 'success' | 'error') {
      messageDiv.className = `mb-6 p-4 rounded-md ${
        type === 'success'
          ? 'bg-green-50 border border-green-200 text-green-800'
          : 'bg-red-50 border border-red-200 text-red-800'
      }`
      messageContent.innerHTML = message
      messageDiv.classList.remove('hidden')

      // Scroll hacia el mensaje
      messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' })
    }

    function hideMessage() {
      messageDiv.classList.add('hidden')
    }

    function setLoading(loading: boolean) {
      submitBtn.disabled = loading
      if (loading) {
        submitText.classList.add('hidden')
        loadingText.classList.remove('hidden')
      } else {
        submitText.classList.remove('hidden')
        loadingText.classList.add('hidden')
      }
    }

    form.addEventListener('submit', async function (e) {
      e.preventDefault()
      hideMessage()
      setLoading(true)

      const formData = new FormData(form)

      // Log de los datos del formulario
      for (let [key, value] of formData.entries()) {
        console.log(`  ${key}: ${value}`)
      }

      const response = await fetch('/api/cotizacion', {
        method: 'POST',
        body: formData,
      })

      const result = await response.json()

      if (response.ok && result.success) {
        showMessage(
          '¡Cotización enviada exitosamente! Te contactaremos en las próximas 24 horas. Revisa tu email para la confirmación.',
          'success'
        )
        form.reset()
      } else {
        showMessage(
          result.error || 'Hubo un error al enviar la cotización. Intenta nuevamente.',
          'error'
        )
      }

      setLoading(false)
    })
  })
</script>
