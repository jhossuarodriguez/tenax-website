---
import Layout from '@/layouts/Layout.astro'

export const prerender = true

const canonical = 'https://tenaxconstruction.com.do/404'
---

<Layout canonical={canonical} noindex={true}>
  <section
    class="w-full min-h-screen flex flex-col justify-center items-center bg-[url('/about-bg.webp')] bg-cover bg-center bg-no-repeat mx-auto relative"
  >
    <div class="absolute inset-0 bg-black/75 z-0"></div>

    <div
      class="relative z-10 flex flex-col items-center text-center px-4 md:px-6 lg:px-8"
      data-reveal
    >
      <p class="text-primary text-sm md:text-base font-semibold uppercase tracking-[0.35em] mb-3">
        Error 404
      </p>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        Página no encontrada
      </h1>
      <p class="text-base md:text-lg text-white/80 max-w-xl mb-8">
        La página que estás buscando no existe, fue movida o su URL es incorrecta.
      </p>

      <div class="flex flex-col sm:flex-row gap-3">
        <a
          href="/"
          class="px-6 py-3 rounded bg-primary text-white font-medium hover:bg-[#e35d2c] transition-colors duration-300"
          title="Volver a la página de inicio"
          aria-label="Volver a la página de inicio"
        >
          ← Volver al inicio
        </a>
        <a
          href="/contacto/Contactanos"
          class="px-6 py-3 rounded border border-white/40 text-white font-medium hover:bg-white/10 transition-colors duration-300"
          title="Ir a la página de contacto"
          aria-label="Ir a la página de contacto"
        >
          Contactar con Tenax
        </a>
      </div>
    </div>
  </section>
</Layout>
